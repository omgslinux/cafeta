{% extends 'base.html.twig' %}

{% block body %}
    <h1>Calendario</h1>

    <table>
        <tbody>
            <tr>
                <th>Fecha</th>
                <td>{% if calendario.fecha %}{{ calendario.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Colectivoid</th>
                <td>{{ calendario.colectivoId }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ calendario.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('calendario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('calendario_edit', { 'id': calendario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
