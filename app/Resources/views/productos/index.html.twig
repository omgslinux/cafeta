{% extends 'base.html.twig' %}

{% block body %}
    <h1>Productos</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre corto</th>
                <th>Nombre largo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><a href="{{ path('productos_show', { 'id': item.id }) }}">{{ item.corto }}</a></td>
                <td>{{ item.largo }}</td>
                <td>
                    <a href="{{ path('productos_edit', { 'id': item.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('productos_new') }}">Crear un producto nuevo</a>
        </li>
    </ul>
{% endblock %}
